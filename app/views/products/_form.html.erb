<%= form_for(@product) do |f| %>
  <div class="field">
    <%= f.label :product_name %><br>
    <%= f.text_field :product_name %>
  </div>
  <div class="field">
    <%= f.label :product_type %><br>
    <%= f.text_field :product_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
